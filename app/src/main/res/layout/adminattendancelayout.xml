<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <EditText
            android:id="@+id/from"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="FROM"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/btnfrom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/from"
            android:background="#ffffff"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:src="@drawable/calender" />

        <EditText
            android:id="@+id/to"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/btnfrom"
            android:gravity="center"
            android:hint="TO"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/btnto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/to"
            android:background="#ffffff"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:src="@drawable/calender" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/btnto"
            android:background="#ffffff"
            android:layout_marginHorizontal="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/search"
            android:text="SEARCH" />



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#ff1744"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:id="@+id/boyCount"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#689f38"
                android:textStyle="bold"
                android:id="@+id/girlCount"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#ff1744"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:id="@+id/AbsentGirls"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#689f38"
                android:textStyle="bold"
                android:id="@+id/PresentGirls"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#ff1744"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:id="@+id/AbsentBoys"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#689f38"
                android:textStyle="bold"
                android:id="@+id/PresentBoys"/>
        </LinearLayout>

    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle">
        </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>